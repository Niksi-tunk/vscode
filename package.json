{
	"name": "niksi-vscode",
	"description": "Niksi client for VSCode",
	"version": "0.0.1",
	"publisher": "lajp",
	"license": "MIT",
	"engines": {
		"vscode": "^1.74.0"
	},
	"activationEvents": [
		"onWebviewPanel:niksi"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
			  {
				"id": "niksi",
				"title": "Niksi",
				"icon": "icon.png"
			  }
			]
		  },
		"views": {
			"niksi": [
			  {
				"type": "webview",
				"id": "calicoColors.colorsView",
				"name": "Niksi"
			  }
			]
		  },
		"commands": [
			{
				"command": "niksi.start",
				"title": "Start a new session with Niksi",
				"category": "Niksi",
				"icon": {
                    "light": "icon.png",
                    "dark": "icon.png"
                }
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -w -p ./"
	},
	"devDependencies": {
		"@types/node": "^16.18.34",
		"@types/vscode": "^1.73.0",
		"@types/vscode-webview": "^1.57.0",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"eslint": "^8.26.0",
		"typescript": "^5.3.2"
	}
}
